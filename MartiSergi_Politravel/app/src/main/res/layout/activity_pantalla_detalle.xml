    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PantallaDetalle">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/montana" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:layout_editor_absoluteX="-103dp"
            tools:layout_editor_absoluteY="-16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/carta"
                android:layout_width="match_parent"
                android:layout_height="950sp"
                android:layout_marginTop="280dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="100sp"
                    android:elevation="2sp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/puntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75sp"
                    android:layout_marginTop="96sp"
                    android:elevation="2sp"
                    android:text="Puntuacion"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:elevation="2sp"
                    android:text="Nombre"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:elevation="2sp"
                    android:text="pais"
                    android:textAlignment="center"
                    android:textColor="@color/gris"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="225sp"
                    android:layout_marginTop="100sp"
                    android:elevation="2sp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="262sp"
                    android:layout_marginTop="96sp"
                    android:elevation="2sp"
                    android:text="€"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280sp"
                    android:layout_marginTop="96sp"
                    android:elevation="2sp"
                    android:text="200.00"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <ImageView
                    android:id="@+id/imgTransporte"
                    android:layout_width="33sp"
                    android:layout_height="33sp"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="153sp"
                    android:elevation="2sp"
                    android:src="@drawable/coche"/>

                <TextView
                    android:id="@+id/transporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80sp"
                    android:layout_marginTop="150sp"
                    android:elevation="2sp"
                    android:text="Coche"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <ImageView
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:layout_marginStart="225sp"
                    android:layout_marginTop="150sp"
                    android:elevation="2sp"
                    android:src="@drawable/calendario" />

                <TextView
                    android:id="@+id/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="268sp"
                    android:layout_marginTop="150sp"
                    android:elevation="2sp"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="290sp"
                    android:layout_marginTop="150sp"
                    android:elevation="2sp"
                    android:text="dias"
                    android:textColor="@color/black"
                    android:textSize="27sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50sp"
                    android:layout_marginEnd="50sp"
                    android:layout_marginTop="200sp"
                    android:elevation="2sp"
                    android:text="Ven a disfrutar de la belleza natural y cultural de Río de Janeiro, una ciudad vibrante que lo tiene todo. Desde las impresionantes vistas del Cristo Redentor hasta la icónica playa de Copacabana, pasando por la montaña del Pão de Açúcar y sus paisajes espectaculares. La música, la comida y la cultura brasileña te harán sentir como en casa.Ven a disfrutar de la belleza natural y cultural de Río de Janeiro, una ciudad vibrante que lo tiene todo. Desde las impresionantes vistas del Cristo Redentor hasta la icónica playa de Copacabana, pasando por la montaña del Pão de Açúcar y sus paisajes espectaculares. La música, la comida y la cultura brasileña te harán sentir como en casa."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>