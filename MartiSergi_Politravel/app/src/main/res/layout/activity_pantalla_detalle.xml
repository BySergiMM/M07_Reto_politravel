<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PantallaDetalle">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/montana" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-103dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/carta"
            android:layout_width="match_parent"
            android:layout_height="750sp"
            android:layout_marginTop="280dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp">

            <!--.............    Puntuacion     ............-->
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="35sp"
                android:layout_marginTop="100sp"
                android:elevation="2sp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75sp"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:text="Puntuacion"
                android:textColor="@color/black"
                android:textSize="27sp" />

            <!--.............    titulo     ............-->
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:elevation="2sp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:elevation="2sp"
                android:text="pais"
                android:textAlignment="center"
                android:textColor="@color/gris"
                android:textSize="30sp" />

            <!--.............    Puntuacion     ............-->
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="225sp"
                android:layout_marginTop="100sp"
                android:elevation="2sp"
                android:src="@drawable/wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="265sp"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:text="â‚¬"
                android:textColor="@color/black"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="295sp"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:text="Puntuacion"
                android:textColor="@color/black"
                android:textSize="27sp" />


        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>