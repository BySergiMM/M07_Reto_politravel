<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="15sp">

    <ImageView
        android:id="@+id/backgroundImageCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/desierto" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:alpha="0.2"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="25sp" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22sp"
        android:layout_marginTop="10sp"
        android:text="â‚¬"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="10sp"
        android:text="75"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10sp"
        android:text="/P"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="180dp"
        android:gravity="start"
        android:text="Barcelona"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17sp"
        android:layout_marginTop="237sp"
        android:src="@drawable/maps"/>

    <TextView
        android:id="@+id/pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60sp"
        android:layout_marginTop="237sp"
        android:text="Spain"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/entrar"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:src="@drawable/entrar"
        android:layout_marginTop="210sp"
        android:layout_marginLeft="280sp"
        android:rotation="145"/>


</androidx.cardview.widget.CardView>