<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/desierto"
        android:scaleType="centerCrop" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:alpha="0.2"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/tv_politravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="600dp"
        android:text="Politravel"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/tv_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_politravel"
        android:layout_alignStart="@id/tv_politravel"
        android:layout_marginTop="8dp"
        android:text="Explora y reserva tus viajes soÃ±ados"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="serif"/>

</RelativeLayout>