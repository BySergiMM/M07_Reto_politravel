<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Color de fondo azul -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />

            <gradient
                android:startColor="#9966cc"
                android:centerColor="#6b4794"
                android:centerY="0.75"
                android:endColor="#6b2394"
                android:angle="270" />

        </shape>
    </item>

    <!-- Color de la barra amarillo -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- radius of secundary progress -->
                <corners
                    android:radius="10dip" />
                <gradient
                    android:startColor="#ffff99"
                    android:centerColor="#ffff66"
                    android:centerY="0.75"
                    android:endColor="#e6e64c"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

